<% provide(:title, 'Create new landlord') %>
<h1>Create new landlord</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@landlord) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.submit "Create new landlord", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>  
